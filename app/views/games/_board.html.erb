<div class='flex-direction-column-reverse board'>
  <% board.rows.each do |row| %>
    <div class='flex-direction-row row'>
      <% row.each do |square| %>
        <% if square.tile.present? %>
          <div class='square flex-direction-row'>
            <div id=<%= dom_id(square.tile) %> class='tile'>
              <%= square.tile.letter %>
              <%= square.tile.points %>
            </div>
          </div>
        <% else %>
          <div
            id=<%= dom_id(square) %>
            data-submit-target='square'
            data-action='drop->drag#drop dragover->drag#dragOver'
            class='square flex-direction-row'>
            <div>
              <div class='premium'>
                <%= premium_label(square.premium) %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
