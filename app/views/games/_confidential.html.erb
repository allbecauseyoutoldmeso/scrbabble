<%= render(
  partial: 'skip_turn',
  locals: {
    tiles: player.tile_rack.tiles,
    tile_bag: tile_bag
  }
) %>
<%= render(partial: 'modal', locals: { hidden: true }) %>
<%= render(
  partial: 'alert',
  locals: { message: alert }
) %>
<div class='flex-direction-row player-dashboard' data-controller='shuffle'>
  <%= render(
    partial: 'tile_rack',
    locals: { player: player }
  ) %>
  <%= render(
    partial: 'buttons',
    locals: { disabled: !player.is_current_player? }
  ) %>
</div>
