<div
  data-controller='tile'
  id=<%= dom_id(tile) %>
  draggable=<%= draggable %>
  data-action='dragstart->drag#dragStart dragend->drag#dragEnd dblclick->tile#onDoubleClick'
  class='tile flex-direction-column <%= 'multipotent hintable' if tile.multipotent? %>'>
  <div class='tile-letter'>
    <%= tile.letter %>
  </div>
  <div class='tile-points'>
    <%= tile.points %>
  </div>
  <% if tile.multipotent? %>
    <%= render partial: 'games/tile_form', locals: { tile: tile } %>
    <%= render(
      partial: 'games/hint',
      locals: { message: t('games.show.hint.multipotent_tile') }
    ) %>
  <% end %>
</div>
