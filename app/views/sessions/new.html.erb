<%= form_with model: User.new, url: sessions_path, method: :post do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :password %>
  <%= form.text_field :password, type: 'password' %>
  <%= form.submit t('sessions.create'), class: 'button' %>
<% end %>
<%= link_to(t('sessions.new.create_new_user'), new_user_path, class: 'link') %>
